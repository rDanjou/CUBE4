@model CUBE.Models.Salarie
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Salarie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prenom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prenom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TelephoneFixe)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelephoneFixe)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TelephonePortable)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelephonePortable)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Site)
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Sites.Ville
        </dd>        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Service)
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Services.Nom
        </dd>
    </dl>
</div>
@if (SignInManager.IsSignedIn(User))
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.SalarieId">Edit</a> | <a asp-action="Index"> Back to the list </a>
    </div>
}
else
{
    <div><a asp-action="Index"> Back to the list </a></div>
}
