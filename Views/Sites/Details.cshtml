@model CUBE.Models.Site
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Site</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ville)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ville)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fonction)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fonction)
        </dd>
    </dl>
</div>
@if (SignInManager.IsSignedIn(User))
{
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.SiteId">Edit</a> | <a asp-action="Index">Back to the list </a>
        </div>
}
else
{
        <div><a asp-action="Index">Back to the list</a></div>
}
